@using System.Web
@using Arad.Portal.DataLayer.Models.Shared;
@using Arad.Portal.GeneralLibrary.Utilities;
@using Arad.Portal.DataLayer.Models.Permission;
@using Arad.Portal.UI.Shop.Dashboard.ViewComponents;
@model PagedItems<ListPermissionViewModel>
@{
    var i = ((Model.CurrentPage - 1) * Model.PageSize);
    System.Collections.Specialized.NameValueCollection queryString = HttpUtility.ParseQueryString(Model.QueryString);

    queryString.Remove("page");

    Layout = "~/Views/Shared/_Layout.cshtml";
    var dir = "";
    if (CultureInfo.CurrentCulture.TextInfo.IsRightToLeft)
    {
        dir = "rtl";
    }
    else
    {
        dir = "ltr";
    }
}
@section Styles
{
    <style>
        .userListCell {
            text-align: center;
            vertical-align: middle;
        }
    </style>
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Language.GetString("Menu_Permissions")</h3>
        <div class="card-tools" style='@(dir=="rtl" ? "float:left;" : "float:right;")'>

            <a asp-action="AddEdit" class="btn btn-success btn-sm">
                <i style="position: relative;left: 5px;top: 2px;" class="fa fa-plus"></i>@Language.GetString("AddPermissionPart_Title")
            </a>
        </div>
    </div>
    <div class="card-body table-bordered  table-responsive p-0" id="permissionListCard">
        <table class="table table-hover">
            <thead>
                <tr style="text-align:center;">
                    <th>@Language.GetString("tbl_RowName")</th>
                    <th>@Language.GetString("Permission_Name")</th>
                    <th>@Language.GetString("Permission_Type")</th>
                    <th>@Language.GetString("Permission_Method")</th>
                    <th>@Language.GetString("Permission_ClientAddress")</th>
                    <th>@Language.GetString("Permission_Routes")</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Any())
                {

                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="userListCell">@(++i)</td>
                            <td class="userListCell">@item.Title</td>
                            <td class="userListCell">@item.Type</td>
                            <td class="userListCell">@item.Method</td>
                            <td class="userListCell">@item.ClientAddress</td>
                            <td class="userListCell">@item.Routes</td>
                            <td>
                                @if (ViewBag.Permissions["Remove"])
                                {
                                    <button onclick="deletePer('@item.Id')" class="btn btn-sm btn-danger">
                                        <i style="position: relative; left: 5px; top: 1px;" class="fa fa-trash"></i>@Language.GetString("btn_Delete")
                                    </button>
                                }

                                @if (ViewBag.Permissions["Edit"])
                                {
                                    <a asp-action="AddEdit" asp-controller="Permission" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i style="position: relative;left: 5px;top: 2px;" class="fa fa-edit"></i>ویرایش
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {

                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        @await Component.InvokeAsync("Pagination", new PageViewModel
      {
          CurrentPage = Model.CurrentPage,
          ItemsCount = Model.ItemsCount,
          PageSize = Model.PageSize,
          Navigation = Url.Action("List", "Permission"),
          QueryParams = Model.QueryString
      })
    </div>

</div>
<div id="page-data" data-current="@Model.CurrentPage" data-total="@Model.ItemsCount" data-size="@Model.PageSize">
    @{
        if (Model.Items.Count != 0)
        {
            int i = (Model.CurrentPage - 1) * Model.PageSize;

            @foreach (var item in Model.Items)
            {
                <div class="table-row">
                    <div class="card-table @(item.IsActive ? "active":"notActive")">
                        <div class="row m-0">
                            <div class="table-col col-xs-12 col-md-1 d-lg-block">
                                <span>@(++i)</span>
                            </div>
                            <div class="table-col col-xs-12 col-md-3 col-lg-2">
                                <span class="mo-title">@Language.GetString("permission_name"):</span>
                                <span>@item.Title</span>
                            </div>
                            <div class="table-col col-xs-12 col-lg-2 col-md-2">
                                <span class="mo-title">@Language.GetString("Permission_Type")</span>
                                <span>@item.Type</span>
                            </div>
                            <div class="table-col col-xs-12 col-lg-3 col-md-2">
                                <span class="mo-title">@Language.GetString("Permission_ClientAddress")</span>
                                <span>@item.ClientAddress</span>
                            </div>
                            <div class="table-col col-xs-12 col-lg-3 col-md-2">
                                <span class="mo-title">@Language.GetString("Permission_Routes")</span>
                                <span>@item.Routes</span>
                            </div>

                            <div class="table-col col-xs-12 col-lg-2 col-md-2">
                                <div class="">
                                    @if (ViewBag.Permissions["Edit"])
                                    {
                                        <a id="editRecord" href="#" data-toggle="modal" data-id="@item.Id" class=" btn btn-outline-primary btn-xs">
                                            @Language.GetString("btn_Edit")
                                        </a>
                                    }
                                    @if (ViewBag.Permissions["Remove"])
                                    {
                                        <button id="deleteRecord" href="#" data-toggle="modal" data-id="@item.Id" type="button" class="btn btn-outline-danger btn-xs">
                                            @Language.GetString("btn_Delete")
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty text-center">@Language.GetString("AlertAndMessage_NoDataToShow")</div>
        }
    }
</div>

