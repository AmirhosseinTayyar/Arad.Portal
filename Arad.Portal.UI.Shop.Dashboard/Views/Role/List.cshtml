@using Arad.Portal.GeneralLibrary.Utilities
@using Arad.Portal.DataLayer.Models.Shared;
@using Arad.Portal.DataLayer.Models.Role
@model PagedItems<RoleDTO>
@{
    Layout = null;
}

@{
    <div id="page-data" data-current="@Model.CurrentPage" data-total="@Model.ItemsCount" data-size="@Model.PageSize">
        @{
            if (Model.Items.Count != 0)
            {
                int i = (Model.CurrentPage - 1) * Model.PageSize;

                @foreach (var item in Model.Items)
                {
                    <div class="table-row">
                        <div class="card-table @(item.IsActive ? "active":"notActive")">
                            <div class="row m-0">
                                <div class="table-col col-xs-12 col-md-1 d-none d-lg-block">
                                    <span>@(++i)</span>
                                </div>
                                <div class="table-col col-xs-12 col-lg-7">
                                    <span class="mo-title">@Language.GetString("Role_Name")</span>
                                    <span>@item.RoleName</span>
                                </div>
                                <div class="table-col col-xs-12 col-lg-2">
                                    <span class="mo-title">@Language.GetString("ActivationState")</span>
                                    <label class="switch">
                                        <input class="checkbox" type="checkbox" id="activeUser" checked="@item.IsActive" data-id="@item.RoleId" value="@item.IsActive">
                                        <span class="slider round"></span>
                                    </label>
                                </div>
                                <div class="table-col col-xs-12 col-lg-2">
                                    <div class="">
                                        @if (ViewBag.Permissions["Details"])
                                        {
                                            <a id="editRecord" data-id="@item.RoleId" href="#" class="btn btn-outline-primary btn-xs">
                                                @Language.GetString("btn_Detail")
                                            </a>
                                        }
                                        @if (ViewBag.Permissions["Remove"])
                                        {
                                            <button id="deleteRecord" data-id="@item.RoleId" href="#" data-toggle="modal" type="button" class="btn btn-outline-danger btn-xs">
                                               @Language.GetString("btn_Delete")
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty text-center">@Language.GetString("AlertAndMessage_NotifyEmptyList")</div>
            }
        }
    </div>
}


