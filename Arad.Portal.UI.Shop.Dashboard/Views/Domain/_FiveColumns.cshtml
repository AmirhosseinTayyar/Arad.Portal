@using Arad.Portal.DataLayer.Models.DesignStructure;
@{
    var section = "";
    if(@ViewBag.RowNumber.ToString().StartsWith("1"))
    {
        section = "headerSection";
    }else if(@ViewBag.RowNumber.ToString().StartsWith("2"))
    {
        section = "containerSection";
    }else if(@ViewBag.RowNumber.ToString().StartsWith("3"))
    {
        section = "footerSection";
    }

    var first = "";
    var second = "";
    var third = "";
    var forth = "";
    var fifth = "";
    switch((Enums.FiveColsTemplateWidth)@ViewBag.ColWidth)
    {
        case Enums.FiveColsTemplateWidth.One_Two_Six_Two_One :
            first = "col-4 col-md-1  border border-1";
            second = "col-8 col-md-2  border border-1";
            third = "col-12 col-md-6  border border-1";
            forth = "col-8 col-md-2  border border-1";
            fifth = "col-4 col-md-1  border border-1";
            break;
        case Enums.FiveColsTemplateWidth.Two_One_Six_One_Two :
         first = "col-8 col-md-2  border border-1";
            second = "col-4 col-md-1  border border-1";
            third = "col-12 col-md-6  border border-1";
            forth = "col-4 col-md-1  border border-1";
            fifth = "col-8 col-md-2  border border-1";
            break;
    }
     var guid = @ViewBag.Guid;
}
<div class="row sectionRow mx-2" rn="@ViewBag.RowNumber" rowCustomClasses="" guid="@guid">
    <div class="@first" colnum="1" did='@ViewBag.DomainId' cnt="6">
         <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 1, Section = section, ColumnClassNames = first.Replace("border", "").Replace("border-1", ""), RowGuid = guid }'/>
    </div>
     <div class="@second" colnum="2" did='@ViewBag.DomainId' cnt="6">
          <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 2, Section = section, ColumnClassNames = second.Replace("border", "").Replace("border-1", ""), RowGuid  = guid }'/>
     </div>
      <div class="@third" colnum="3" did='@ViewBag.DomainId' cnt="6">
           <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 3, Section = section, ColumnClassNames = third.Replace("border", "").Replace("border-1", ""), RowGuid  = guid }'/>
      </div>
       <div class="@forth" colnum="4" did='@ViewBag.DomainId' cnt="6">
            <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 4, Section = section, ColumnClassNames = forth.Replace("border", "").Replace("border-1", ""), RowGuid  = guid }'/>
       </div>
        <div class="@fifth" colnum="5" did='@ViewBag.DomainId' cnt="6">
             <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 5, Section = section, ColumnClassNames = fifth.Replace("border", "").Replace("border-1", ""), RowGuid  = guid }'/>
        </div>
       
</div>

