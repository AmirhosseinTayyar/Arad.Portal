            function addNewRow(sender, tag)
            {
              debugger;
                var divId = `#${tag}_paramSection`;
                $(divId).find(".row.firstLevel").removeClass("active");
                var currentRowNumber ;
                switch(tag)
                {
                    case "headerSection":
                    currentRowNumber = headerRowNumber;
