@using Arad.Portal.DataLayer.Models.DesignStructure;
@model Arad.Portal.DataLayer.Models.DesignStructure.RowContent;
@{
    var section = "";
    if(@ViewBag.RowNumber.ToString().StartsWith("1"))
    {
        section = "headerSection";
    }else if(@ViewBag.RowNumber.ToString().StartsWith("2"))
    {
        section = "containerSection";
    }else if(@ViewBag.RowNumber.ToString().StartsWith("3"))
    {
        section = "footerSection";
    }
    string first = "";
    string second = "";
    string third = "";
    ColContent firstColContent = null;
    ColContent secondColContent = null;
    ColContent thirdColContent = null;
    if(Model != null)
    {
        firstColContent = Model.ColsContent.FirstOrDefault(_ => _.ColNumber == 1);
        secondColContent = Model.ColsContent.FirstOrDefault(_ => _.ColNumber == 2);
        thirdColContent = Model.ColsContent.FirstOrDefault(_ => _.ColNumber == 3);
        
    }

    switch((Enums.ThreeColsTemplateWidth)@ViewBag.ColWidth)
    {
        case Enums.ThreeColsTemplateWidth.One_One_One:
            first = "col-12 col-md-4 border border-1";
            second = "col-12 col-md-4 border border-1";
            third = "col-12 col-md-4 border border-1";
            break;
        case Enums.ThreeColsTemplateWidth.Five_Two_Five:
            first = "col-5  border border-1";
            second = "col-2  border border-1";
            third = "col-5  border border-1";
            break;
        case Enums.ThreeColsTemplateWidth.One_Four_One:
            first = "col-2  border border-1";
            second = "col-8  border border-1";
            third = "col-2  border border-1";
            break;
        case Enums.ThreeColsTemplateWidth.One_Ten_One:
            first = "col-1  border border-1";
            second = "col-10  border border-1";
            third = "col-1  border border-1";
            break;
        case Enums.ThreeColsTemplateWidth.One_Two_One:
            first = "col-12 col-md-3  border border-1";
            second = "col-12 col-md-6  border border-1";
            third = "col-12 col-md-3  border border-1";
            break;

    }
     var guid = @ViewBag.Guid;

}
<div class="row sectionRow mx-2" rn="@ViewBag.RowNumber" rowCustomClasses="" guid="@guid">
    <div class="@first" colnum="1" did='@ViewBag.DomainId' cnt ="3">
          <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 1, Section = section, ColumnClassNames = first.Replace("border-1", "").Replace("border", ""), RowGuid = guid, ColData = firstColContent != null ? firstColContent.ColData : ""}'/>
    </div>
     <div class="@second" colnum="2 did='@ViewBag.DomainId' cnt ="3">
           <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 2, Section = section, ColumnClassNames = second.Replace("border-1", "").Replace("border", ""), RowGuid = guid, ColData = secondColContent != null ? secondColContent.ColData : "" }'/>
     </div>
      <div class="@third" colnum="3" did='@ViewBag.DomainId' cnt ="3">
            <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 3, Section = section, ColumnClassNames = third.Replace("border-1", "").Replace("border", ""), RowGuid = guid , ColData = thirdColContent != null ? thirdColContent.ColData : ""}'/>
      </div>
</div>
