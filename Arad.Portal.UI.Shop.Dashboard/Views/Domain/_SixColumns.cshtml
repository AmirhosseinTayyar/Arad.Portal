@using Arad.Portal.DataLayer.Models.DesignStructure;
@{
    var section = "";
    if(@ViewBag.RowNumber.ToString().StartsWith("1"))
    {
        section = "headerSection";
    }else if(@ViewBag.RowNumber.ToString().StartsWith("2"))
    {
        section = "containerSection";
    }else if(@ViewBag.RowNumber.ToString().StartsWith("3"))
    {
        section = "footerSection";
    }
}
<div class="row sectionRow" rn="@ViewBag.RowNumber">
    <div class="col-12 col-md-2 border" colnum="1" did='@ViewBag.DomainId' cnt="6">
         <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 1, Section = section, ColumnClassNames = "col-12 col-md-2" }'/>
    </div>
     <div class="col-12 col-md-2 border" colnum="2" did='@ViewBag.DomainId' cnt="6">
          <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 2, Section = section, ColumnClassNames = "col-12 col-md-2" }'/>
     </div>
      <div class="col-12 col-md-2 border" colnum="3" did='@ViewBag.DomainId' cnt="6">
           <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 3, Section = section, ColumnClassNames = "col-12 col-md-2" }'/>
      </div>
       <div class="col-12 col-md-2 border" colnum="4" did='@ViewBag.DomainId' cnt="6">
            <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 4, Section = section, ColumnClassNames = "col-12 col-md-2" }'/>
       </div>
        <div class="col-12 col-md-2 border" colnum="5" did='@ViewBag.DomainId' cnt="6">
             <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 5, Section = section, ColumnClassNames = "col-12 col-md-2" }'/>
        </div>
         <div class="col-12 col-md-2 border" colnum="6" did='@ViewBag.DomainId' cnt="6">
              <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 6, Section = section, ColumnClassNames = "col-12 col-md-2" }'/>
         </div>
</div>

