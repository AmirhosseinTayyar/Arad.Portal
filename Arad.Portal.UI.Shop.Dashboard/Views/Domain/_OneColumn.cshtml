@using Arad.Portal.DataLayer.Models.DesignStructure;
@model Arad.Portal.DataLayer.Models.DesignStructure.RowContent
@{
    var section = "";
    if(@ViewBag.RowNumber.ToString().StartsWith("1"))
    {
        section = "headerSection";
    }else if(@ViewBag.RowNumber.ToString().StartsWith("2"))
    {
        section = "containerSection";
    }else if(@ViewBag.RowNumber.ToString().StartsWith("3"))
    {
        section = "footerSection";
    }
    var guid = @ViewBag.Guid;
    ColContent firstColContent = null;
    if(Model != null && Model.ColsContent.Count() > 0)
    {
       firstColContent = Model.ColsContent.First();
    }
}
<div class="row sectionRow mx-2" rn="@ViewBag.RowNumber" enumcolid="@ViewBag.ColWidth" rowCustomClasses="@(Model != null ? Model.ExtraClassNames : "")" guid="@guid" @(Model.BGTypeId != null ? (Model.BGTypeId == 1 ? $"style=background-color:{Model.BgCodeColor}" : $"style=background-image:url('{Model.BgImage}')") : "")>
    <div class="col-12 border border-1" colnum="1" did='@ViewBag.DomainId' cnt="1" colClassNames="@(firstColContent != null ? firstColContent.ColumnClassNames : "" )">
         <partial name="_InnerSection.cshtml" model='new ColContent(){ColNumber = 1, Section = section, ColumnClassNames = firstColContent != null ? firstColContent.ColumnClassNames : "col-12", RowGuid = guid , ColData =  firstColContent != null ? firstColContent.ColData : ""}'/>
    </div>
</div>