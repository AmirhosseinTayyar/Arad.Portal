@using Arad.Portal.DataLayer.Models.DesignStructure;
@{
    var section = "";
    if(@ViewBag.RowNumber.ToString().StartWith("1"))
    {
        section = "headerSection";
    }else if(@ViewBag.RowNumber.ToString().StartWith("2"))
    {
        section = "containerSection";
    }else if(@ViewBag.RowNumber.ToString().StartWith("3"))
    {
        section = "footerSection";
    }
   
}
<div class="row" rn="@ViewBag.RowNumber">
    <div class="col-12" colNum="1">
         <partial name="_InnerSection.cshtml" model='new ColAddress(){ColNumber = 1, RowNumber = @ViewBag.RowNumber, Section = section }'/>
    </div>
</div>