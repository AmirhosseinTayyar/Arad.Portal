
@using Arad.Portal.GeneralLibrary.Utilities;
@using System.Globalization;
@model List<Arad.Portal.DataLayer.Models.Shared.MenuLinkModel>
@{
    Layout = null;
}

<div class="sidebar ">
    <div class="sidebar-nav">
        <div class="sidebar-wrap">
            <ul class="nav">
                <li>
                    <div class="sidebar-shortcuts" id="sidebar-shortcuts">
                        <div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">
                            <a href="#">
                                <span class="btn btn-success" style="width: 100%;border-radius: 0;padding: .5em;">
                                    @Language.GetString("Menu_Dashboard_HomeTitle")
                                </span>
                            </a>
                        </div>
                    </div>
                </li>

                @foreach (var root in @Model)
                    {
                <li class="nav-item">
                    @if (root.Children.Count != 0)
                            {
                                var hrefCollapse = "menu"+@root.MenuId;
                    <a class="nav-link @(root.IsActive ? "active":"notActive")" data-toggle="collapse" href="#@hrefCollapse">
                        <i class="nav-icon @root.Icon"></i> @Language.GetString(root.MenuTitle)
                        <span class="expand-state pull-left"><i class="fa fa-chevron-down pull-left"></i></span>
                    </a>
                    <ul class="sub unstyle collapse @(root.IsActive ? "show":"")" id="@hrefCollapse">
                        @foreach (var menu in root.Children)
                                    {
                        <li><a class="@(menu.IsActive ? "active":"notActive")" href="/@menu.Link">@menu.MenuTitle</a></li>
                                    }
                    </ul>
                            }
                            else
                            {
                    <a class="nav-link @(root.IsActive ? "active":"notActive")" href="/@root.Link">
                        <i class="nav-icon @root.Icon"></i> @root.MenuTitle
                    </a>
                            }
                </li>
                        }


            </ul>
        </div>
    </div>
</div>


