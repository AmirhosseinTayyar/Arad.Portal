@using System.ComponentModel.Design
@using Arad.Portal.GeneralLibrary.Utilities;
@model Arad.Portal.DataLayer.Models.Shared.MenuLinkModel
@{
    Layout = null;
}
<style>
    .list-group-item {
        background-color: inherit;;
    }
</style>

@if (Model.Children.Count != 0)
{
    var hrefcollapse = "menu" + Model.MenuId;
    <a class="nav-link @(Model.IsActive ? "active":"notactive")" data-toggle="collapse" href="#@hrefcollapse">
        <i class="nav-icon @Model.Icon"></i>
        @Model.MenuTitle
        <span class="expand-state pull-left">
            <i class="fa fa-chevron-down pull-left"></i>
        </span>
    </a>
    <ul class="list-group @(Model.IsActive ? "show":"")" id="@hrefcollapse">
        @foreach (var menu in Model.Children)
        {
            <li class="list-group-item @(menu.Children.Count > 0 ? "has-sub" : "")">
                @await Component.InvokeAsync("InnerMenu", menu.MenuId);
            </li>
        }
    </ul>
}
else
{
    <a class="nav-link @(Model.IsActive ? "active":"notActive")" href="/Admin/@Model.Link">
        <i class="nav-icon @Model.Icon"></i> @Model.MenuTitle
    </a>
}