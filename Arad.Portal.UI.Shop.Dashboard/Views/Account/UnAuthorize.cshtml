
@{
    Layout = null;
    string lang = "";
    var dir = "";
    if (CultureInfo.CurrentCulture.TextInfo.IsRightToLeft)
    {
        dir = "rtl";
    }
    else
    {
        dir = "ltr";
    }

    switch (CultureInfo.CurrentCulture.Name)
    {
        case "fa-IR":
            lang = "fa";
            break;
        case "en-US":
            lang = "en";
            break;
    }
}

<!DOCTYPE html>

<html style="height: auto;"  dir="@dir" lang="@lang">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Language.GetString("UnAuthorize")</title>
    <style>
        body {
            background: url(/imgs/401-Error.png);
            background-repeat: no-repeat;
            background-size: 100%;
        }
    </style>
</head>
<body >
<div></div>
</body>
</html>
