@model Arad.Portal.DataLayer.Models.ShoppingCart.ShoppingCartDTO
@{
    // var index = 1;
}
<style>
    .pInTb {
        display: inline-block;
    }
    .basket th{
        text-align : center;
    }
     .basket td{
        text-align : center;
    }
</style>
<div class="card">
    <div class="card-body">
        @if (@Model.Details.Any())
        {

            @foreach (var seller in @Model.Details)
            {
                    <div class="card m-3 border-1 rounded-3">
                        <div class="card-header bg-success bg-opacity-10">
                            <div class="row gy-2 align-middle pt-2">
                                <div class="col-4 offset-2 col-md-2  offset-4">
                                    <label class="form-label"> @Language.GetString("tbl_VendorName") : </label>
                                </div>
                                <div class="col-4 col-md-2">
                                    @*<label class="form-label"></label>*@
                                    <p><strong>@seller.SellerUserName</strong></p>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table basket">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">@Language.GetString("Image")</th>
                                        <th scope="col" >@Language.GetString("tbl_ProductName")</th>
                                        <th scope="col" >@Language.GetString("PricePerUnit")</th>
                                        <th scope="col" >@Language.GetString("Count")</th>
                                        <th scope="col" >@Language.GetString("FinalPrice")</th>
                                        <th scope="col" >@Language.GetString("Shopping_Changes")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in seller.Products)
                                        {
                                            <tr>
                                                <th scope="row">@item.RowNumber</th>
                                                <td>
                                                    @if (item.ProductImage != null)
                                                    {
                                                        <img class="smlImg" src=@($"../filemanager/getscaledimageOnWidth?path={item.ProductImage.Url}&width={75}")>
                                                    }
                                                </td>
                                                <td class="align-middle"><span >@item.ProductName</span></td>
                                                <td class="align-middle">
                                                    @{
                                                        if (item.PreviousFinalPricePerUnit != item.PricePerUnit - item.DiscountPricePerUnit)
                                                        {
                                                            <div >
                                                                <p class="pInTb"><s>@($"{item.PreviousFinalPricePerUnit} {Model.ShoppingCartCulture.CurrencySymbol}")</s></p>
                                                                <p class="pInTb"><mark>@($"{item.PricePerUnit - item.DiscountPricePerUnit} {Model.ShoppingCartCulture.CurrencySymbol}")</mark></p>
                                                            </div>
                                                        }
                                                    }
                                                </td>
                                                <td class="align-middle">
                                                    <div class="w-75">
                                                        <input type="number" class="form-control orderCnt" proid='@item.ProductId' min="1" value="@item.OrderCount" />
                                                    </div>
                                                </td>
                                                <td class="align-middle">
                                                    <div >
                                                        <p><mark>@($"{@item.TotalAmountToPay} {Model.ShoppingCartCulture.CurrencySymbol}")</mark></p>
                                                    </div>
                                                </td>
                                                <td class="align-middle">
                                                    <div >
                                                        @{
                                                            foreach (var not in item.Notifications)
                                                            {
                                                                <p>@not</p>
                                                                <br />
                                                            }
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer">
                            <div class="row mt-2">
                                <div class="col-4 offset-2 col-md-2 offset-md-4 align-middle">
                                    <label class="form-label"> @Language.GetString("ShippingExpense") : </label>
                                </div>
                                <div class="col-4 col-md-2 align-middle">
                                    <label class="form-control">@($"{seller.ShippingExpense} {Model.ShoppingCartCulture.CurrencySymbol}")</label>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-4 offset-2 col-md-2 offset-md-4 align-middle">
                                    <label class="form-label"> @Language.GetString("SumOfAmount") : </label>
                                </div>
                                <div class="col-4 col-md-2 align-middle">
                                    <p><mark class="fs-5">@($"{seller.Products.Sum(_=>_.TotalAmountToPay) + seller.ShippingExpense} {Model.ShoppingCartCulture.CurrencySymbol}")</mark></p>
                                </div>
                            </div>
                        </div>
                    </div>
            }

            <div class="row mt-2">
                <div class="col-3 offset-3 col-md-2 offset-md-2">
                    <label class="form-control bg-secondary bg-opacity-10 text-center"> @Language.GetString("FinalPriceForPayment") : </label>
                </div>
                <div class="col-3 col-md-2">
                    <p><strong>@($"{Model.FinalPriceForPay} {Model.ShoppingCartCulture.CurrencySymbol}")</strong></p>
                </div>
                <div class="col-2 col-md-2">
                    @if (@Model.Details.Any())
                    {
                        <a class="btn btn-success bg-gradient" asp-action="SendInfo">@Language.GetString("btn_ContinueBuyingOnline")</a>
                    }
                </div>
            </div>

        }
        else
        {
            <div class="row">
                <p class="text-center m-1 p-1"><strong>@Language.GetString("AlertAndMessage_ShoppingCartIsEmpty")</strong></p>
            </div>
        }
    </div>
</div>


<script type="text/javascript">
        $(document).ready(function ()
        {
           $("input.orderCnt").bind('keyup mouseup', function () {
               debugger;
               var cnt = $(this).val();
               var productId = $(this).attr("proid");
                $.ajax({
                    url: "/"+"@ViewBag.LanIcon"+"/basket/AddProToBasket?productId=" + productId + "&cnt=" + cnt,
                    contentType: 'application/json',
                    type: 'Post',
                    dataType: 'json',
                    beforeSend: function () {
                    },
                    success: function (result) {
                        debugger;
                        if(result.status =="Succeed")
                        {
                            window.location.reload();
                        }
                    }
                  });
           });
        });
    //function changeOrderCount(sender, productId) {
    //    debugger;
    //    var cnt = $(sender).val();

    //}
</script>