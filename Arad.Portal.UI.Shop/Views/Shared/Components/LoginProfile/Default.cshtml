@using Arad.Portal.GeneralLibrary.Utilities;
@model bool;

<div class="col-6  col-lg-3">
    <div class="account-wrapper pt-2">
        <ul>
           @if(Model) //isshop == true then it has basket
            {
                    <li class="shopping_cart home_cart">
                        <a asp-controller="basket" asp-action="get" title="" class="r-cart">
                            <span class="head-shoppings">
                                <i class="fa fa-shopping-basket shopping-basket"></i>
                                <span class="display-none count-basket" data-count="0">@($"{@ViewBag.BasketCount?? 0} {@Language.GetString("Stuff")}") </span>
                            </span>
                        </a>
                    </li>
            }
            
            <li class="d-flex justify-content-center">
                @{

                    @if (!@User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="account" asp-action="Login" class="d-inline-block">
                            <span class="title text-secondary">
                                <i class="fa fa-user"></i>
                                <span >@Language.GetString("User_Login")</span>
                            </span>
                        </a>
                        <span class="d-inline-block">/</span>
                         <a asp-controller="account" asp-action="Register" class="d-inline-block">
                            <span class="title text-secondary">
                                <i class="fa fa-user"></i>
                                <span >@Language.GetString("User_Register")</span>
                            </span>
                        </a>
                    }
                    else
                    {
                        <div class="dropdown" id="myUserProfile">
                            <a class="openLoginModal btn dropdown-toggle" role="button" id="drpUserProfile"
                           placement="bottom right" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="title">
                                    <i class="fa fa-user"></i>
                                    <span >@User.Identity.Name</span>
                                </span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="drpUserProfile">
                                @*<li>
                                    <a asp-controller="" asp-action="">@Language.GetString("User_ManagementPanel")</a>
                                </li>*@
                                <li>
                                    <a asp-controller="account" asp-action="profile">@Language.GetString("Menu_Profile")</a>
                                </li>
                                <li>
                                    <a asp-controller="account" asp-action="GetUserOrders">@Language.GetString("Menu_MyOrders")</a>
                                </li>
                                <li>
                                    <a asp-controller="account" asp-action="logout">@Language.GetString("Exit")</a>
                                </li>
                            </ul>
                        </div>
                    }
                }
            </li>

        </ul>

    </div>
</div>