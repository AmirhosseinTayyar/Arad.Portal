@using Arad.Portal.DataLayer.Models.Shared;
@model List<Arad.Portal.DataLayer.Models.Content.ContentGlance>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
<link href="~/css/siteTemplate/ForthContentTemplate.css" rel="stylesheet" />
}

<ul class="list-group">
    @foreach (var item in Model)
    {
         <li class="list-group-item">
             <div class="row">
               <div class="col-3 col-md-2 col-lg-1">
                  <a href="@($"/blog/{item.ContentCode}")">
                    <img src="@($"../filemanager/GetScaledImageOnWidth?path={Model[0].Images.FirstOrDefault(_=>_.ImageRatio == ImageRatio.Square && _.IsMain)}&width={35}")"
                         class="img-fluid rounded-circle"
                         alt="@Model[0].Images.FirstOrDefault(_=>_.ImageRatio == ImageRatio.Square).Title" />
                  </a>
               </div>
               <div class="col-9 col-md-10 col-lg-11">
                   <a href="@($"/blog/{item.ContentCode}")">
                   <span>@item.Title</span>
                   <br/>
                   <span style="font-size:small;">@item.ContentProviderName</span>
                   </a>
               </div>
            </div>
         </li>
    }
</ul>