@using Arad.Ticket.DataLayer.Data.Repositories.Interfaces.Common
@using Arad.Ticket.DataLayer.Entities.Common
@using Arad.Ticket.DataLayer.Helpers
@using System.Globalization
@model Arad.Ticket.Dashboard.Models.dto.User.ResetPassword
@inject ISystemSettingRepository _systemSettingRepository

@{
    Layout = null;
    SystemSetting systemSetting = (await _systemSettingRepository.GetAll()).FirstOrDefault();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible"
          content="IE=edge">

    <link rel="shortcut icon"
          href="~/SystemIcon/@systemSetting?.SystemIcon"
          type="image/x-icon" />

    <title>@systemSetting?.SystemTitle - @Language.GetString("AlertAndMessage_RequestChangePassword")</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport"
          content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link href="~/dashboardAsset/plugins/fontawesome/css/all.min.css"
          rel="stylesheet" />

    <!-- Theme style -->
    <link rel="stylesheet"
          href="~/dashboardAsset/css/adminlte.min.css">
    
    <!-- template rtl version -->
    <link rel="stylesheet"
          href="~/dashboardAsset/css/customfa.css">

    @if (CultureInfo.CurrentCulture.Name == "fa-IR")
    {
        <link rel="stylesheet"
              href="~/dashboardAsset/css/bootstrap-rtl.min.css">
        <link rel="stylesheet"
              href="~/dashboardAsset/css/customFa.css">
        <link href="~/Fonts/IranSans/css/fontiran.css"
              rel="stylesheet" />
    }

    <link href="~/dashboardAsset/css/loader-double.css"
          rel="stylesheet" />

    <link href="~/dashboardAsset/plugins/intl-tel-input/css/intlTelInput.css"
          rel="stylesheet" />

    <style>
        input::placeholder { text-align: center; }

        #imgcpatcha::placeholder {
            font-size: 12px;
            text-align: center;
        }

        body {
            align-content: center;
            background-color: white !important;
            display: flex;
            font-family: @(CultureInfo.CurrentCulture.Name == "fa-IR" ? "IRANSansWeb" : null);
            font-size: 14px;
            justify-content: center;
            padding-top: 170px;
        }
    </style>
</head>

<body>

<div class="loader loader-double"
     id="loading">
</div>

<div style="width: 400px;">

    <form id="ResetPasswordForm"
          asp-action="ResetPassword"
          asp-controller="Account"
          autocomplete="off">

        <div class="card">

            <div class="card-body">
                <div class="text-center">
                    <img src="~/Logo/@systemSetting?.CompanyLogoUrl"
                         height="100"
                         width="100" />
                </div>
                <br />

                <div class="input-group mb-3"
                     style="margin-bottom: 12px !important;">
                    <input placeholder="@Language.GetString("TextAndPlaceholder_UserName")"
                           asp-for="UserName"
                           type="text"
                           class="form-control">

                    <div class="input-group-append">
                        <span class="fa fa-user input-group-text"></span>
                    </div>

                </div>
                <div style="text-align: center">
                    <span asp-validation-for="UserName"
                          class="text-danger">
                    </span>
                </div>

                <div class="input-group mb-3"
                     style="margin-bottom: 12px !important;">
                    <input placeholder="@Language.GetString("TextAndPlaceholder_Mobile")"
                           type="tel"
                           class="form-control"
                           asp-for="CellPhoneNumber"
                           id="CellPhone"
                           style="width: 305px !important">

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-mobile-alt"></span>
                        </div>
                    </div>

                </div>

                <div style="text-align: center">
                    <span asp-validation-for="CellPhoneNumber"
                          class="text-danger">
                    </span>
                </div>

                <div class="input-group mb-3"
                     style="margin-bottom: 12px !important; margin-top: 15px;">

                    <img alt="Captcha"
                         id="imgcpatcha"
                         src="@Url.Action("CaptchaImage", "Captcha")"
                         style="border: 1px solid #9e9e9e" />
                    <input asp-for="Captcha"
                           type="text"
                           class="form-control"
                           id="inlineFormInputGroup"
                           placeholder="@Language.GetString("TextAndPlaceholder_Captcha")"
                           style="text-align: center">

                    <div style="cursor: pointer"
                         class="input-group-prepend">
                        <div class="input-group-text">
                            <i onclick="refreshCaptcha()"
                               class="fas fa-sync-alt">
                            </i>
                        </div>
                    </div>

                    <span id="captValidation"
                          asp-validation-for="Captcha"
                          class="text-danger">
                    </span>
                </div>
            </div>
            <div class="card-footer">
                <button id="btnAnswer"
                        class="btn btn-primary btn-block btn-flat"
                        type="submit">
                    @Language.GetString("Action_Send")
                </button>
            </div>
        </div>
    </form>


</div>

<!-- jQuery -->
<script src="~/dashboardAsset/plugins/jquery/jquery.min.js"></script>
<script src="~/dashboardAsset/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/dashboardAsset/plugins/intl-tel-input/js/intlTelInput.js"></script>
<script src="~/dashboardAsset/plugins/intl-tel-input/js/utils.js"></script>
<script>

    function refreshCaptcha()
    {
        $("#imgcpatcha").attr('src', `@Url.Action("CaptchaImage", "Captcha")?${new Date().getTime()}`);
    }

    var cell = document.querySelector("#CellPhoneNumber");
    window.intlTelInput(cell,
        {
            initialCountry: "IR",
            placeholderNumberType: "MOBILE",
            separateDialCode: true,
            nationalMode: true,
            hiddenInput: "FullCellPhoneNumber"
        });
    
    window.addEventListener("beforeunload",
        function(event) {
            $("#loading").addClass('is-active');
        });

    $('#ResetPasswordForm')
        .submit(function(e) {
            e.preventDefault();
            const form = $(this).serialize();
            $.ajax({
                type: 'Post',
                url: $(this).attr('action'),
                data: form,
                beforeSend: function()
                {
                    $("#loading").addClass('is-active');
                },
                statusCode: {
                    200: function(resultData)
                    {
                        $("#loading").removeClass('is-active');

                        if (resultData.status === "Success") {
                            window.location.href = '@Url.Action("EnterOtp")';
                        }

                        if (resultData.status === "ModelError") {
                            const spanErrorList = $('span[data-val-result]');
                            if (spanErrorList.length > 1) {
                                spanErrorList.each(function() {
                                    $(this).html("");
                                    $(this).parent().removeClass("has-error");
                                });
                            }
                            else {
                                spanErrorList.html("");
                                spanErrorList.parent().removeClass("has-error");
                            }

                            if (resultData.modelStateErrors !== null) {
                                resultData.modelStateErrors.forEach(function(value, index) {
                                    if (value.key === 'Captcha') {
                                        refreshCaptcha();
                                    }

                                    $(`[data-val-result=${value.key}]`).html(value.errorMessage);
                                    $(`[data-val-result=${value.key}]`).parent().addClass("has-error");
                                });
                            }
                        }

                        if (resultData.status === "Error") {
                            Swal.fire({
                                icon: 'error',
                                title: resultData.message,
                                showConfirmButton: false,
                                timer: 1500
                            });
                        }
                    }
                }
            });
        });

</script>
</body>
</html>